<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agendafotografica">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgendaFotografica.NoActionBar">
        <activity
            android:name=".actividades.vistas.RegistrarActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.BorrarActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.InsertarActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.MostrarActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.InfoActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.CalendarioActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".actividades.vistas.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actividades.vistas.MainActivity"
            android:exported="true" />
    </application>

</manifest>