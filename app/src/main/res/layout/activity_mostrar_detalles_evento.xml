<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.vistas.MostrarDetallesEventoActivity">


    <ImageView
        android:id="@+id/img_detalle_evento"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="76dp"
        android:contentDescription="imagen detalle evento"
        android:src="@drawable/fotografo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detalle_Correo"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="16dp"
        android:foreground="?selectableItemBackground"

        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/txt_detalle_nombree"
            android:layout_width="match_parent"

            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baumans"
            android:text="correo"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detalle_descripcion"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="16dp"
        android:foreground="?selectableItemBackground"

        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/txt_detalle_descripcione"
            android:layout_width="match_parent"

            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baumans"
            android:text="descripcion"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detalle_hora"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="390dp"
        android:layout_marginBottom="16dp"
        android:foreground="?selectableItemBackground"

        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/txt_detalle_horae"
            android:layout_width="match_parent"

            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baumans"
            android:text="hora"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_detalle_fecha"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="16dp"
        android:foreground="?selectableItemBackground"

        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <TextView
            android:id="@+id/txt_detalle_fechae"
            android:layout_width="match_parent"

            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baumans"
            android:text="fecha"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardborrar"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="16dp"
        android:foreground="?selectableItemBackground"
        android:onClick="borrar"
        app:cardBackgroundColor="#FF5E5E"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="171dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/borrar" />

            <TextView
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/baumans"
                android:foregroundTint="#FFFFFF"
                android:text="Borrar Evento"
                android:textAlignment="center"
                android:textColor="@color/colorSplash"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVolverbtn"
        android:layout_width="171dp"
        android:layout_height="120dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="16dp"
        android:foreground="?selectableItemBackground"
        android:onClick="volverbtn"
        app:cardBackgroundColor="#A9ACE1"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/volver" />

            <TextView
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/baumans"
                android:text="VOLVER"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>